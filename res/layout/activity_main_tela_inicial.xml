<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundotcc"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jogomatematica.visao.VisaoMainTelaInicial" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main1"
        android:adjustViewBounds="true" 
        android:layout_marginBottom="50px"/>
    
    <ImageButton
        android:id="@+id/imgSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView1"
        android:onClick="imgSound"
        android:src="@drawable/sound" />

    <Button
        android:id="@+id/btnPontuacao"
        android:layout_width="300px"
        android:layout_height="75px"
        android:layout_below="@+id/btnIniciar"
        android:layout_centerHorizontal="true"
        android:onClick="btnPontuacao"
        android:text="Pontuação"
        android:textColor="#0070c0"
        android:textSize="25px" />

    <Button
        android:id="@+id/btnIniciar"
        android:layout_width="300px"
        android:layout_height="75px"
        android:layout_centerInParent="true"
        android:onClick="btnIniciar"
        android:text="Iniciar"
        android:textColor="#ff0066"
        android:textSize="25px" />

    <Button
        android:id="@+id/btnSair"
        android:layout_width="300px"
        android:layout_height="75px"        
        android:layout_below="@+id/btnPontuacao"
        android:layout_centerHorizontal="true"
        android:onClick="btnSair"
        android:text="Sair"
        android:textColor="#0070c0"
        android:textSize="25px" />

</RelativeLayout>
