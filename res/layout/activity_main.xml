<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundotcc"
    android:onClick="imgResultado1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jogomatematica.visao.VisaoJogoMatematica" >

    <TextView
        android:id="@+id/txtCerto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="30px"
        android:text="Certas: 0"
        android:textColor="#2fc700"
        android:textSize="25px" />

    <TextView
        android:id="@+id/txtErrado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtCerto"
        android:layout_below="@+id/txtCerto"
        android:layout_marginTop="5dp"
        android:text="Erradas: 0"
        android:textColor="#ff0202"
        android:textSize="25px" />

    <ImageView
        android:id="@+id/imgResultado"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/resultado" />

    <ImageView
        android:id="@+id/imgResultado1"
        android:layout_width="120dp"
        android:layout_height="74dp"
        android:layout_alignTop="@+id/imgResposta1"
        android:layout_toRightOf="@+id/imgResposta1"
        android:onClick="imgResultado1"
        android:src="@drawable/dez" />

    <ImageView
        android:id="@+id/imgResultado2"
        android:layout_width="120dp"
        android:layout_height="74dp"
        android:layout_alignTop="@+id/imgResposta2"
        android:layout_toRightOf="@+id/imgResposta2"
        android:onClick="imgResultado2"
        android:src="@drawable/dez" />

    <ImageView
        android:id="@+id/imgResposta3"
        android:layout_width="83dp"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:layout_toLeftOf="@+id/imgResultado"
        android:onClick="imgResultado3"
        android:src="@drawable/resultadoc" />

    <ImageView
        android:id="@+id/imgResposta2"
        android:layout_width="90dp"
        android:layout_height="73dp"
        android:layout_above="@+id/imgResultado3"
        android:layout_alignLeft="@+id/imgResposta3"
        android:layout_marginBottom="39dp"
        android:onClick="imgResultado2"
        android:src="@drawable/resultadob" />

    <ImageView
        android:id="@+id/imgResposta1"
        android:layout_width="90dp"
        android:layout_height="73dp"
        android:layout_above="@+id/imgResultado2"
        android:layout_marginBottom="42dp"
        android:layout_toLeftOf="@+id/imgResultado2"
        android:onClick="imgResultado1"
        android:src="@drawable/resultadoa" />

    <ImageView
        android:id="@+id/imgOperador"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/imgNumero1"
        android:layout_toRightOf="@+id/imgNumero1"
        android:src="@drawable/operadoradicao" />

    <ImageView
        android:id="@+id/imgNumero2"
        android:layout_width="200dp"
        android:layout_height="124dp"
        android:layout_alignBottom="@+id/imgOperador"
        android:layout_toRightOf="@+id/imgOperador"
        android:src="@drawable/tres" />

    <ImageView
        android:id="@+id/imgNumero1"
        android:layout_width="200dp"
        android:layout_height="124dp"
        android:layout_alignLeft="@+id/imgResposta1"
        android:layout_below="@+id/txtErrado"
        android:layout_marginTop="65dp"
        android:src="@drawable/tres" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/imgOperador"
        android:layout_toRightOf="@+id/imgResultado"
        android:src="@drawable/operadorresultado" />

    <ImageView
        android:id="@+id/imgResultado3"
        android:layout_width="120dp"
        android:layout_height="74dp"
        android:layout_alignTop="@+id/imgResposta3"
        android:layout_toRightOf="@+id/imgResposta3"
        android:onClick="imgResultado3"
        android:src="@drawable/dez" />

</RelativeLayout>